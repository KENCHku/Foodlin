<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="location_title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#353536</item>
    </style>

    <style name="horizontal_scroll_btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical" tools:targetApi="o">10px</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20px</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/text_hor_sc_btn</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#5C9628</item>
        <item name="android:layout_marginEnd">8.44dp</item>
        <item name="strokeColor">#E0E0E0</item>
    </style>
    
    <style name="EditTextSearch">
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">#61000000</item>
            <item name="android:textColorHint">#9E9E9E</item>
    </style>

    <style name="ToolbarDetailFragmentDeliveryDropdown">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#82C446</item>
    </style>

</resources>